    <style>
         /* Grid Style */
         .form-row {
            margin-bottom: 10px;
        }

        .form-row [class^="col-"] {
            padding-right: 5px;
            padding-left: 5px;
        }

        /* Style all labels */
        label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Style all input fields */
        input[type="text"],
        input[type="password"],
        input[type="number"],
        select,
        textarea {
