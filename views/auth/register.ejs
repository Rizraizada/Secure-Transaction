 <body style="background-image: url(front/login-sing-up/registration/bg2.jpg);">

    <header>
        <nav class="navbar">
            <span class="hamburger-btn material-symbols-rounded  navbar-toggler-icon">&#xf204;</span>
            <a href="#" class="logo">
                <img src="front/login-sing-up/registration/assets/images/logo-bd.jpg" alt="logo">
                <h2>Secure Money Transactions</h2>
            </a>
            <ul class="links">
                <span class="close-btn material-symbols-rounded">close</span>

                <li><a href="C:\project\Bank Home\index.html" >Home</a></li>
              
                <!-- <li><a href="#">Contact us</a></li> -->
                <li><a href="/login">Login</a></li>
            </ul>
            
           
        </nav>
    </header>
   
    <div class="container form-container">
        <div class="col-lg-12 mx-auto login-container">
            <div style="height: 10px;">

            </div>
            <div style="align-items: center; text-align: center;margin-top: 20px;" class="justify-content-center ">

                <h3  style="margin: 10px;"> Secure Money Transactions Bank Registration form</h3>
            </div>
            <form id="registrationForm" action="/auth/register" method="post" class="form-body" enctype="multipart/form-data">
                <div class="form-title row">
                    <h4>Personal Information:</h4>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="username">First Name</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="username" name="username" placeholder="Enter First Name" class="form-control form-control-sm" required>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="last_name">Last Name</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="last_name" name="last_name" placeholder="Enter Last Name" class="form-control form-control-sm">
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="date_of_birth">Date of Birth</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="date" id="date_of_birth" name="date_of_birth" placeholder="Enter Date of Birth" class="form-control form-control-sm" required>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="gender">Gender</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8 pt-1 select-wrapper">
                        <select id="gender" name="gender" class="form-control form-control-sm" required>
                            <option value="" selected disabled hidden>Select Gender</option>
                            <option value="male">Male</option>
                            <option value="female">Female</option>
                            <option value="other">Other</option>
                        </select>
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="father_name">Father Name</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="father_name" name="father_name" placeholder="Enter Father Name" class="form-control form-control-sm">
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="photoID">Your Photo:</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="file" id="photoID" name="photo" class="form-control" accept="image/*" required>
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="mother_name">Mother Name</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="mother_name" name="mother_name" placeholder="Enter Mother Name" class="form-control form-control-sm">
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="initial_deposit_amount">Initial Deposit Amount</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="number" id="initial_deposit_amount" name="initial_deposit_amount" placeholder="Enter Initial Deposit Amount" class="form-control form-control-sm" required>
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="national_id">National ID(NID)</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="national_id" name="national_id" placeholder="Enter National ID Number" class="form-control form-control-sm" required>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="password">Password</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="password" id="password" name="password" placeholder="Enter Password" class="form-control form-control-sm" required>
                    </div>
                </div>
            
                <div class="form-title row">
                    <h4>Contact Information</h4>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="mobile_number">Mobile Number</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="mobile_number" name="mobile_number" placeholder="Enter Mobile Number" class="form-control form-control-sm" required>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="email_address">Email Address</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="email" id="email_address" name="email_address" placeholder="Enter Email Address" class="form-control form-control-sm" required>
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="city">City</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="city" name="city" placeholder="Enter City" class="form-control form-control-sm">
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="state">State</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="state" name="state" placeholder="Enter State" class="form-control form-control-sm">
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="country">Country</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="country" name="country" placeholder="Enter Country" class="form-control form-control-sm">
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="postal_Code">Postal Code</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <input type="text" id="postal_Code" name="postal_Code" placeholder="Enter Postal Code" class="form-control form-control-sm">
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4">
                        <label for="village_address">Village Address</label>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <textarea id="village_address" name="village_address" rows="5" placeholder="Enter Full Address" class="form-control form-control-sm"></textarea>
                    </div>
                    <div class="col-lg-2 col-md-4">
                        <label for="residential_address">Residential Address</label>
                        <sup class="req">*</sup>
                        <span class="indc">:</span>
                    </div>
                    <div class="col-lg-4 col-md-8">
                        <textarea id="residential_address" name="residential_address" rows="5" placeholder="Enter Residential Address" class="form-control form-control-sm" required></textarea>
                    </div>
                </div>
            
                <div class="form-row row">
                    <div class="col-lg-2 col-md-4"></div>
                    <div class="col-lg-4 col-md-4">
                        <button type="submit" class="btn btn-sm btn-primary">Submit Form</button>
                    </div>
                </div>
            </form>
            
        </div>
        
    </div>
    
   
   


</body>

</html>
